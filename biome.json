{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error"
			}
		}
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 1,
		"lineWidth": 100
	},
	"javascript": {
		"globals": ["Astro"],
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"overrides": [
		{
			"include": ["*.astro"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedVariables": "off"
					}
				}
			}
		},
		{
			"include": ["*.tsx", "*.jsx"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "error"
					}
				}
			}
		},
		{
			"include": ["*.tsx", "*.jsx"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "error"
					}
				}
			}
		},
		{
			"include": ["./src/components/ui/*.tsx", "./src/components/ui/*.jsx"],
			"linter": {
				"rules": {
					"suspicious": {
						"noArrayIndexKey": "off"
					},
					"complexity": {
						"noBannedTypes": "off"
					}
				}
			}
		}
	]
}
