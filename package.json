{
  "name": "astro-boilerplate",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host",
    "start": "astro dev",
    "build": "astro check && astro build",
    "astro:check": "astro check",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "panda codegen --clean",
    "debug:panda": "panda debug",
    "studio": "panda studio --host --port 4322",
    "check-deps": "ncu",
    "update-deps": "ncu -u",
    "check": "biome check ./src",
    "lint:eslint": "eslint ./src",
    "lint:text": "textlint \"**/*.{md,mdx}\" \"!**/node_modules\"",
    "lint:markup": "markuplint \"src/**/*.{astro,jsx,tsx}\" --problem-only",
    "lint:markdown": "markdownlint-cli2 \"**/*.{md,mdx}\" \"!**/node_modules\""
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.0.0-beta.1",
    "@astrojs/react": "^3.6.2",
    "@astrojs/sitemap": "^3.2.0",
    "@textlint/textlint-plugin-markdown": "^14.2.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "astro": "^5.0.0-beta.1",
    "lucide-react": "^0.452.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "^1.79.5",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@markuplint/astro-parser": "^4.6.7",
    "@markuplint/jsx-parser": "^4.7.7",
    "@markuplint/react-spec": "^4.5.7",
    "@pandacss/dev": "^0.46.1",
    "@pandacss/eslint-plugin": "^0.2.0",
    "@pandacss/studio": "^0.46.1",
    "@textlint-ja/textlint-rule-no-insert-dropping-sa": "^2.0.1",
    "@textlint-ja/textlint-rule-no-synonyms": "^1.3.0",
    "@typescript-eslint/parser": "^8.8.1",
    "astro-eslint-parser": "^1.0.3",
    "eslint-plugin-astro": "^1.2.4",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "lefthook": "^1.7.18",
    "markdownlint-cli2": "^0.14.0",
    "markuplint": "^4.9.4",
    "npm-check-updates": "^17.1.3",
    "postcss": "^8.4.47",
    "stylelint": "^16.10.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "sudachi-synonyms-dictionary": "^14.0.0",
    "textlint": "^14.2.1",
    "textlint-rule-ja-hiragana-fukushi": "^1.3.0",
    "textlint-rule-ja-hiragana-hojodoushi": "^1.1.0",
    "textlint-rule-ja-hiragana-keishikimeishi": "^1.1.0",
    "textlint-rule-ja-no-orthographic-variants": "^2.0.0",
    "textlint-rule-no-mixed-zenkaku-and-hankaku-alphabet": "^1.0.1",
    "textlint-rule-prefer-tari-tari": "^1.0.3",
    "textlint-rule-preset-ja-technical-writing": "^10.0.1"
  }
